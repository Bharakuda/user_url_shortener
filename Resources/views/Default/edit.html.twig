{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-2 col-md-offset-5 text-center">
            <h1 class="text-center">User edit</h1>

            <br>
            {{ form_start(edit_form) }}
                {% if is_granted('ROLE_ADMIN') %}
                    {% for role in roles %}
                        <p class="bg-warning">Current user role: {{ role }}</p>
                        <br>
                        {% if role == 'ROLE_ADMIN' %}
                            <a class="btn btn btn-warning" role="button" href="#">Demote to User</a>

                        {% else %}
                            <a class="btn btn btn-warning" role="button" href="#">Promote to Admin</a>
                            {#<button class="btn btn btn-warning" onclick="user.roles = 'ROLE_ADMIN'">Promote to Admin</button>#}
                            {#{{ dump(user.roles) }}#}
                        {% endif %}
                    {% endfor %}
                {% endif %}
                {{ form_widget(edit_form) }}
                <button type="submit" class="btn btn-primary">Save changes</button>
            {{ form_end(edit_form) }}
        </div>
    </div>
</div>
{% endblock %}

